{
    "name": "@lifecycleos/sdk",
    "version": "1.0.0",
    "description": "Official LifecycleOS SDK for Next.js SaaS applications â€” identify users, track events, manage accounts, and leverage lifecycle-driven automation.",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./react": {
            "import": "./dist/react/index.mjs",
            "require": "./dist/react/index.js",
            "types": "./dist/react/index.d.ts"
        },
        "./nextjs": {
            "import": "./dist/nextjs/index.mjs",
            "require": "./dist/nextjs/index.js",
            "types": "./dist/nextjs/index.d.ts"
        }
    },
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "typecheck": "tsc --noEmit",
        "clean": "rimraf dist"
    },
    "peerDependencies": {
        "react": ">=18.0.0",
        "react-dom": ">=18.0.0",
        "next": ">=14.0.0"
    },
    "peerDependenciesMeta": {
        "react": {
            "optional": true
        },
        "react-dom": {
            "optional": true
        },
        "next": {
            "optional": true
        }
    },
    "devDependencies": {
        "tsup": "^8.0.0",
        "typescript": "^5.0.0",
        "@types/react": "^19.0.0",
        "@types/node": "^20.0.0",
        "rimraf": "^5.0.0"
    },
    "keywords": [
        "lifecycleos",
        "saas",
        "lifecycle",
        "analytics",
        "nextjs",
        "react",
        "sdk",
        "user-tracking",
        "churn-prevention",
        "expansion"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/lifecycleos/sdk"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}